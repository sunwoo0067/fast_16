# 데이터베이스
DATABASE_URL=sqlite:///./dropshipping.db

# 로깅
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API 설정
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# OwnerClan API 설정
OWNERCLAN_API_URL=https://api.ownerclan.com/graphql
OWNERCLAN_AUTH_URL=https://api.ownerclan.com/auth

# 쿠팡 API 설정
COUPANG_API_URL=https://api-gateway.coupang.com

# 동기화 설정
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# 토큰 갱신 설정
TOKEN_REFRESH_BUFFER_HOURS=3
TOKEN_CLEANUP_INTERVAL_HOURS=24

# 비즈니스 규칙
DEFAULT_MARGIN_RATE=0.3
MIN_MARGIN_RATE=0.1
MAX_STOCK_QUANTITY=999
